<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml" xmlns:o="urn:schemas-microsoft-com:office:office">

	<head>

		<!--[if gte mso 9]><xml>
			<o:OfficeDocumentSettings>
			<o:AllowPNG/>
			<o:PixelsPerInch>96</o:PixelsPerInch>
			</o:OfficeDocumentSettings>
			</xml>
		<![endif]-->

		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="viewport" content="width=device-width"/>

		<title>{{ title }}</title>

		{# Inlined HTML Styles #}
		<link rel="stylesheet" href="{{ css or 'styles.css' }}" />

		{# Inline Block Styles #}
		<link data-premailer="ignore" rel="stylesheet" href="{{ inlinecss or 'inline.css' }}" inline />

	</head>

	<body class="">

		<span class="preheader">{% block preheader %}{% endblock %}</span>

		<table class="body">
			<tr>
				<td class="center body__content" align="center" valign="top">
					<center>

						<table class="container container--header">
							<tr>
								<td class="container__inner">

									{% block header %}{% endblock %}

								</td>
							</tr>
						</table>

						<table class="container container--body">
							<tr>
								<td class="container__inner">

									{% block body %}{% endblock %}

								</td>
							</tr>
						</table>

						<table class="container container--footer">
							<tr>
								<td class="container__inner">

									{% block footer %}{% endblock %}

								</td>
							</tr>
						</table>

					</center>
				</td>
			</tr>
		</table>

	</body>
</html>
